<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_weight="2"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewId"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:src="@drawable/logo"
                android:layout_marginBottom="10dp"
                android:layout_height="70dp" />
            <EditText
                android:id="@+id/uEmail"
                android:layout_width="match_parent"
                android:hint="Email"
                android:background="@drawable/text_field_design"
                android:layout_marginTop="10dp"
                android:padding="13dp"
                android:inputType="text"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/uPass"
                android:background="@drawable/text_field_design"
                android:padding="13dp"
                android:layout_width="match_parent"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="0dp"
                    android:text="Remember Me"
                    android:buttonTint="#6cb0b7"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Login"
                    android:textColor="#f9f4f4"
                    android:background="@drawable/button_design"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView><!-- Login form design-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#f4eeee"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="35dp"


                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

        </LinearLayout>

    </LinearLayout><!-- Login title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/cardviewId"
        android:layout_margin="20dp"
        android:paddingTop="20dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/facebook_icon"
                android:layout_marginRight="10dp"
                android:layout_height="40dp" />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/google_plus"
                android:layout_height="40dp" />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/twitter"
                android:layout_height="40dp" />
            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/rss"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout><!-- Social activity icon-->

</RelativeLayout>